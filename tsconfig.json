{
    "extends": "@tsconfig/node14/tsconfig.json",

    "compilerOptions": {
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "outDir": "dist"
    },

    "watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriority"
    },

    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
